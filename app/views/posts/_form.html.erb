<% if @post.errors.any? %>
  <%= @post.errors.count%>件のエラーがあります。
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @post, local: true) do |f| %>
  <%= f.label :タイトル %><br>
  <%= f.text_field :title %>
  <br>
  <%= f.label :内容 %><br>
  <%= f.text_field :content %>
  <br>
  <%= f.submit %>
<% end %>
<%= link_to "戻る", posts_path %>
