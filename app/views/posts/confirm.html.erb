<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @post, url: posts_path, local: true) do |form| %>

  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :image %>
  <%= form.hidden_field :image_cache %>

  <p>タイトル</p>
  <%= @post.title %>
  <p>本文</p>
  <%= @post.content %>
  <p>写真</p>
  <%= image_tag(@post.image.url) if @post.image.url %><br>
  <%= form.submit  "登録する" %>
<% end %>

<%= form_with(model: @post, url: new_post_path, local: true, method: "get") do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :image %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "戻る", name: "back" %>
<% end %>
